<section class = "shipping-address">
  <p> <%= @order.name %> </p>
  <p>Address: <%="#{@order.address}, #{@order.city}, #{@order.state} #{@order.zip}"%></p>
</section>

<% @order.item_orders.each do |item_order|%>
  <section id = "item-<%=item_order.item_id%>">
    <p><%= item_order.item.name%></p>
    <p>Sold by: <%= item_order.item.merchant.name%></p>
    <p>Price: $<%= item_order.price%></p>
    <p>Quantity: <%= item_order.quantity%></p>
    <p>Subtotal: $<%= item_order.subtotal%></p>
  </section>
<% end %>
<section id="grandtotal">
  <p>Total: $<%=@order.grandtotal%></p>
</section>
<section id="datecreated">
  <p> <%= @order.created_at%></p>
</section>
