<h1>Edit <%=link_to current_user.merchant.name, "/merchant/merchants/#{current_user.merchant.id}" %></h1>
<center>
  <%= form_tag "/merchant/merchants/#{current_user.merchant.id}", method: :patch do %>
    <%= label_tag :name %>
    <%= text_field_tag :name, "#{current_user.merchant.name}"%>

    <%= label_tag :address %>
    <%= text_field_tag :address, "#{current_user.merchant.address}" %>

    <%= label_tag :city %>
    <%= text_field_tag :city, "#{current_user.merchant.city}" %>

    <%= label_tag :state %>
    <%= text_field_tag :state, "#{current_user.merchant.state}" %>

    <%= label_tag :zip %>
    <%= text_field_tag :zip,"#{current_user.merchant.zip}", pattern: "[0-9]{5}", title: 'Zip must be five digits'  %>

    <%= submit_tag 'Update Merchant' %>
  <% end %>
</center>
