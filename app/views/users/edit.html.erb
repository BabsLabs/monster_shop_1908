<h1>Change Your Information</h1>

<%= form_tag "/profile/update", method: :patch do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, current_user.name %>
  <%= label_tag :address, "Street Address" %>
  <%= text_field_tag :address, current_user.address  %>
  <%= label_tag :city %>
  <%= text_field_tag :city, current_user.city %>
  <%= label_tag :state %>
  <%= text_field_tag :state, current_user.state %>
  <%= label_tag :zip %>
  <%= text_field_tag :zip, current_user.zip, pattern: "[0-9]{5}", title: 'Zip must be five digits' %>
  <%= label_tag :email %>
  <%= email_field_tag :email, current_user.email %>
  <%= submit_tag 'Update Information' %>
<% end %>
