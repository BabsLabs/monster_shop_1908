<h1>Register as a New User</h1>

<center>
  <%= form_tag "/users", method: :post do %>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
    <%= label_tag :address, "Street Address" %>
    <%= text_field_tag :address %>
    <%= label_tag :city %>
    <%= text_field_tag :city %>
    <%= label_tag :state %>
    <%= text_field_tag :state %>
    <%= label_tag :zip %>
    <%= text_field_tag :zip, nil, pattern: "[0-9]{5}", title: 'Zip must be five digits' %>
    <%= label_tag :email %>
    <%= email_field_tag :email %>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <%= label_tag :password_confirmation, 'Password Confirmation' %>
    <%= password_field_tag :password_confirmation %>
    <%= submit_tag 'Complete Registration' %>
  <% end %>
</center>