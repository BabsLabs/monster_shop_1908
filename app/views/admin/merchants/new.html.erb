<h1 align= "center">Create Merchant</h1>
<center>
  <%= form_tag admin_merchants_path, method: :post do |f| %>

    <%= label_tag :name %>
    <%= text_field_tag :name %>

    <%= label_tag :address %>
    <%= text_field_tag :address %>

    <%= label_tag :city %>
    <%= text_field_tag :city %>

    <%= label_tag :state %>
    <%= text_field_tag :state %>

    <%= label_tag :zip %>
    <%= text_field_tag :zip, nil, pattern: "[0-9]{5}", title: 'Zip must be five digits'  %>

    <%= submit_tag 'Create Merchant' %>
  <% end %>
</center>
