<h1 align= "center">Edit Review for <%= link_to @review.item.name, item_path(@review.item) %></h1>
<center>
  <%= form_tag review_path(@review), method: :patch do |f| %>

    <%= text_field_tag :title, "#{@review.title}" %>

    <%= text_field_tag :content, "#{@review.content}" %>

    <%= text_field_tag :rating, "#{@review.rating}"%>

    <%= submit_tag 'Update Review' %>
  <% end %>
</center>
